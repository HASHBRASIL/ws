{% from 'botoes-tiny.html.twig' import botao as gerar_botao %}

<div uib-dropdown="" class="btn-group dropdown">
    <button uib-dropdown-toggle="" class="btn btn-primary btn-sm dropdown-toggle" type="button" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-ellipsis-v" aria-hidden="true"></i>&nbsp;<span class="caret"></span>
    </button>
    <ul role="menu" class="dropdown-menu pull-right dropdown-light">
        {% for filho in servico.filhos %}
            {% if filho.metadata.ws_comportamento == 'listaction' %}
                {{ gerar_botao(filho, 'listaction', null) }}
            {% endif %}
        {% endfor %}
    </ul>
</div>
